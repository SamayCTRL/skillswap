{
  "version": 2,
  "builds": [
    {
      "src": "server/server.js",
      "use": "@vercel/node",
      "config": { 
        "includeFiles": ["server/**/*", "public/**/*", "package.json", "package-lock.json", "*.js", "*.json", "*.env"]
      }
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/server/server.js" },
    { "source": "/(.*)", "destination": "/server/server.js" }
  ],
  "env": {
    "NODE_ENV": "production",
    "PORT": "3000"
  }
}