# Test Environment Configuration
NODE_ENV=test

# Server Configuration
PORT=3001
CLIENT_URL=http://localhost:3001

# Database Configuration (Test Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=skill_swap_test
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration (Test Keys)
JWT_SECRET=test-jwt-secret-for-testing-only-do-not-use-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=test-refresh-secret-for-testing-only
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_SALT_ROUNDS=4

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./test-uploads

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SUBSCRIPTIONS=true
ENABLE_VIDEO_MEETING=false
ENABLE_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# Security Configuration
CORS_ORIGIN=http://localhost:3001
TRUST_PROXY=false

# Logging Configuration
LOG_LEVEL=error
LOG_FORMAT=combined
LOG_FILE=